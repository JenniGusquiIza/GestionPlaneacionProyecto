<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvActividad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    app:cardBackgroundColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/txtCodigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12dp"
                android:text="ACTIVIDAD"
                android:textSize="@dimen/size_text16"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/bnMenu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toEndOf="@+id/txtCodigo"
                android:layout_marginTop="@dimen/margin_12dp"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:background="@drawable/effect_ripple"
                android:contentDescription="@string/txt_null"
                android:src="@drawable/ic_drag_indicator_24"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/margin_2dp"
            android:background="@color/gray500"
            android:layout_gravity="center"/>
        <ProgressBar
            android:id="@+id/pbEstado"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp"
            android:background="@drawable/effect_ripple"
            android:indeterminateDrawable="@drawable/ic_check_circle_outline_24"
            android:indeterminateTint="@color/red"/>
        <TextView
            android:id="@+id/txtDescripcion"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="@string/txt_descripcion"
            android:textSize="@dimen/size_text8"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>